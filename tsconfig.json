{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@images/*": [
        "src/assets/images/*"
      ],
      "@icons/*": [
        "src/assets/images/icons/*"
      ],
      "@videos/*": [
        "src/assets/videos/*"
      ],
      "@audio/*": [
        "src/assets/audio/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@utils": [
        "src/common/utils.ts"
      ],
      "@config": [
        "src/common/config.ts"
      ],
      "@schemas": [
        "src/common/schemas/index.ts"
      ],
      "@services": [
        "src/common/services/index.ts"
      ],
      "@components": [
        "src/components/index.ts"
      ],
      "@containers": [
        "src/containers/index.ts"
      ],
      "@context": [
        "src/context/index.ts"
      ],
      "@hooks": [
        "src/hooks/index.ts"
      ],
      "@hoc": [
        "src/hoc/index.ts"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@stylesComponents/*": [
        "src/styles/components/*"
      ],
      "@stylesPages/*": [
        "src/styles/pages/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}